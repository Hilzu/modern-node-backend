{
  "name": "modern-node-backend",
  "version": "0.0.0",
  "description": "Modern Node backend example/template",
  "main": "src/index.js",
  "author": "Santeri Hiltunen",
  "license": "CC0-1.0",
  "engines": {
    "node": "^8.9.0",
    "yarn": "^1.2.1"
  },
  "scripts": {
    "format": "prettier --write '*.{mjs,js,json}' 'src/**/*.{mjs,js,json}'",
    "lint": "eslint --ext mjs,js .",
    "precommit": "lint-staged",
    "start": "node $npm_package_main",
    "start:dev": "nodemon --watch src | pino",
    "test": "yarn lint && yarn test:mocha",
    "test:mocha": "NODE_ENV=test mocha -r @std/esm -r chai/register-expect test/**/*.mjs"
  },
  "dependencies": {
    "@std/esm": "^0.19.2",
    "express": "^4.16.2",
    "pino": "^4.10.3",
    "pino-http": "^3.0.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.11",
    "prettier": "1.10.2",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "airbnb-base", "prettier"],
    "settings": {
      "import/extensions": [".mjs", ".js"],
      "import/resolver": {
        "node": {
          "extensions": [".mjs", ".js", ".json"]
        }
      }
    },
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "mjs": "never",
          "js": "never"
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ]
    }
  },
  "lint-staged": {
    "*{mjs,js,json}": ["prettier --write --config package.json", "git add"]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
