{
  "name": "modern-node-backend",
  "version": "0.0.0",
  "description": "Modern Node backend example/template",
  "main": "dist/index.js",
  "author": "Santeri Hiltunen",
  "license": "CC0-1.0",
  "engines": {
    "node": "^8.9.0",
    "npm": "^5.5.1",
    "yarn": "^1.2.1"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "format": "prettier --write '*.{json,js}' 'src/**/*.{json,js}'",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "start": "node $npm_package_main",
    "start:dev": "yarn build --watch & yarn watch",
    "test": "yarn lint && yarn test:jest",
    "test:jest": "jest",
    "watch": "nodemon | pino"
  },
  "dependencies": {
    "koa": "^2.3.0",
    "pino": "^4.8.2",
    "pino-http": "^2.6.2",
    "source-map-support": "^0.5.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.40",
    "@types/node": "^8.0.53",
    "@types/pino": "^4.7.0",
    "@types/uuid": "^3.4.3",
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "prettier": "1.7.4",
    "supertest": "^3.0.0",
    "typescript": "^2.6.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ]
  },
  "jest": {
    "roots": [
      "src"
    ]
  },
  "lint-staged": {
    "*{js,json}": [
      "prettier --write --config package.json",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
